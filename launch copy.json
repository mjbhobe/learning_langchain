    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--epochs=200",
                "--batch_size=64",
                // "--show_sample",
                "--train",
                "--eval",
                "--pred",
                // "--use_cnn",
                // "--lr=0.001",
                //"--l2_reg=0.005",
                //"--verbose=2",
            ]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--epochs=25",
                "--batch_size=64",
                // "--show_sample",
                "--train",
                "--eval",
                "--pred",
                // "--use_cnn",
                // "--lr=0.001",
                //"--l2_reg=0.005",
                //"--verbose=2",
            ]
        },
        {
            "name": "debug streamlit",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "justMyCode": true,
            "program": "streamlit", // /home/xx/tmp/venv/bin/streamlit",
            "args": [
                "run",
                "${file}"
            ]
        }
    ]
}